<Page
    x:Class="Archery_Manager.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Archery_Manager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel x:ConnectionId='1' x:Name="contentPanel" Margin="0,0,0,0">
            <TextBlock Text="Archery Manager" FontSize="40" HorizontalAlignment="Center" Margin="0,10,0,20" FontFamily="Microsoft JhengHei"/>
            <ListView x:ConnectionId='2' x:Name="ListArcher" Height="525" Margin="0,0,0,0" Foreground="Black" Background="#FFA8DCE8" ItemsSource="{Binding Donnees}" IsItemClickEnabled="True" SelectionMode="None"                                  >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition />
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                </Grid.RowDefinitions>
                            <Image  Source="{Binding photo}" Width="70" Margin="0,0,30,0"/>
                            <TextBlock Grid.Column="1" FontSize="20" Margin="0,0,30,0" VerticalAlignment="Center" Text="{Binding name}"/>
                            <TextBlock Grid.Column="2" FontSize="20" VerticalAlignment="Center" Text="{Binding arme}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:ConnectionId='3' x:Name="button1" Content="Nouvel archer" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"                       >
                   
            </Button>
        </StackPanel>

    </Grid>
</Page>

