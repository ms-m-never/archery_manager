<Page
    x:Class="Archery_Manager.volee_comptage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Archery_Manager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton x:ConnectionId='1' Icon="Save" Label="Sauver et Quitter"                   />
            <AppBarButton Icon="Delete"  Label="Suprimer" />
            <AppBarButton x:ConnectionId='2' Icon="Back" Label="Annuler"                    />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid x:ConnectionId='3' x:Name="Cible" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Ellipse x:ConnectionId='4' Fill="Black" Height="360" Width="360" Stroke="black"                       />
        <Ellipse x:ConnectionId='5' Fill="Black" Height="320" Width="320" Stroke="White"                        />
        <Ellipse x:ConnectionId='6' Fill="Blue" Height="280" Width="280" Stroke="Black"                      />
        <Ellipse x:ConnectionId='7' Fill="Blue" Height="240" Width="240" Stroke="Black"                    />
        <Ellipse x:ConnectionId='8' Fill="red" Height="200" Width="200" Stroke="Black"                     />
        <Ellipse x:ConnectionId='9' Fill="red" Height="160" Width="160" Stroke="Black"                     />
        <Ellipse x:ConnectionId='10' Fill="yellow" Height="120" Width="120" Stroke="Black"                     />
        <Ellipse x:ConnectionId='11' Fill="yellow" Height="70" Width="70" Stroke="Black"                    />
        <Ellipse x:ConnectionId='12' Fill="yellow" Height="20" Width="20" Stroke="Black"                     />
        <Button x:ConnectionId='13' x:Name="deux" Content="2" HorizontalAlignment="center" Width="120" VerticalAlignment="Top" Margin="0,505,240,0"/>
        <Button x:ConnectionId='14' x:Name="un" Content="1" HorizontalAlignment="center" Width="120" VerticalAlignment="Top" Margin="120,505,120,0"/>
        <Button x:ConnectionId='15' x:Name="paille" Content="Paille" HorizontalAlignment="center" Width="120" VerticalAlignment="Top" Margin="240,505,0,0"/>
        <TextBlock x:ConnectionId='16' x:Name="scoreTotal" HorizontalAlignment="Stretch" Margin="0,10,0,0" TextWrapping="Wrap" Text="0" TextAlignment="Center" VerticalAlignment="Top" FontSize="48" FontWeight="Bold"/>
        <TextBlock x:ConnectionId='17' x:Name="fleche1" HorizontalAlignment="left" Margin="20,80,0,0" TextWrapping="Wrap" Text="0" TextAlignment="Center" VerticalAlignment="Top" FontSize="35"/>
        <TextBlock x:ConnectionId='18' x:Name="fleche2" HorizontalAlignment="left" Margin="90,80,0,0" TextWrapping="Wrap" Text="0" TextAlignment="Center" VerticalAlignment="Top" FontSize="35"/>
        <TextBlock x:ConnectionId='19' x:Name="fleche3" HorizontalAlignment="left" Margin="160,80,0,0" TextWrapping="Wrap" Text="0" TextAlignment="Center" VerticalAlignment="Top" FontSize="35"/>
        <TextBlock x:ConnectionId='20' x:Name="volee" HorizontalAlignment="right" Margin="0,80,20,0" TextWrapping="Wrap" Text="0" TextAlignment="Center" VerticalAlignment="Top" FontSize="35"/>
        <Button x:ConnectionId='21' x:Name="Valid" Content="Volée suivante" HorizontalAlignment="Stretch" Margin="0,550,0,0" VerticalAlignment="Top" IsEnabled="False"/>
        <Ellipse x:ConnectionId='22' Name="Fleche1Point" Fill="white" Height="0" Width="0" Stroke="Black" />
        <Ellipse x:ConnectionId='23' Name="Fleche2Point" Fill="white" Height="0" Width="0" Stroke="Black"/>
        <Ellipse x:ConnectionId='24' Name="Fleche3Point" Fill="white" Height="0" Width="0" Stroke="Black"/>


    </Grid>
</Page>

